</body>
</html>
<script>
$("#selall").click(function(){
    if($(this).attr("checked"))
        $(".selall").attr("checked","checked");   // 设置所有的都选中
    else
        $(".selall").removeAttr("checked");       // 设置都不选中
});
</script>

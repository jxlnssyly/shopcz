<body >
<h1>
    <span class="action-span"><a href="<%= new_category_path %>">添加</a></span>
    <span class="action-span1"><a href="#">ECSHOP 管理中心</a></span>
    <span id="search_id" class="action-span1"> - 列表 </span>
    <div style="clear:both"></div>
</h1>
<form method="post" action="__CONTROLLER__/bdel" name="listForm">
    <div class="list-div" id="listDiv">
        <table cellpadding="3" cellspacing="1">
            <tr>
                <th width="40"><input id="selall" type="checkbox" /></th>
                                <th>id</th>
                                <th>分类名称</th>
                                <th>上级分类</th>
                                <th>操作</th>
            </tr>

            <% @categories.each do |category| %>
                 <tr>
                    <td align="center">
                        <%= check_box_tag "delid[]",  category.id, false,class: "selall" %>
                        <td align="center"><%= category.id %></td>
                        <td align="left"><%= ('-' * 8 * category.level) +  category.cat_name %></td>
                        <td align="center"><%= category.parent_id %></td>
                        <td align="center">
                    <%= link_to '编辑', edit_category_path(category) %>
                     |
                     <%= link_to '删除',category,:method => 'delete',
                                         data: { confirm: 'Are you sure?' } %>
                    </td>
                </tr>
            <% end -%>

           <tr>
                <td colspan="5"><input type="submit" value="删除所选" /></td>
            </tr>
        </table>
    </div>
</form>

<div id="footer">

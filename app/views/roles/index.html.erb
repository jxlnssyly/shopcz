<body>
<h1>
    <span class="action-span"><a href="<%= new_role_path %>">添加</a></span>
    <span class="action-span1"><a href="#">ECSHOP 管理中心</a></span>
    <span id="search_id" class="action-span1"> - 列表 </span>
    <div style="clear:both"></div>
</h1>


<%= form_tag action: 'destroy_multiple',  method: :delete do %>
    <div class="list-div" id="listDiv">
        <table cellpadding="3" cellspacing="1">
            <tr>
                <th width="40"><input id="selall" type="checkbox" /></th>
                                <th>id</th>
                                <th>角色名称</th>
                                <th>权限列表</th>
                                <th>操作</th>
            </tr>
            <% all_roles.each do |r| %>
                 <tr>
                    <td align="center">
                        <%= check_box_tag "delid[]",  r.id, false,class: "selall" %>
                        <td align="center"><%= r.id %></td>
												<td align="center"><%= r.role_name %></td>
                        <td align="center"><%=
                        find_pri_name(r.pri_id_list)
                         %></td>
                        <td align="center">
                    <%= link_to '编辑', edit_role_path(r) %>
                     |
                     <%= link_to '删除',r,:method => 'delete',
                                         data: { confirm: 'Are you sure?' } %>
                    </td>
                </tr>
            <% end -%>

           <tr>
                <td colspan="5"><input type="submit" value="删除所选" /></td>
            </tr>
        </table>
    </div>
<% end -%>


<div id="footer">
